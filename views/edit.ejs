<%- include ("./partials/_header") %>
<main role="main" class="container">
    <% if (isEdit) { %>
    <div class="row">
    <div class="col-md-8 blog-main">
        
        <form action=<%= "/editPost/" + entry.id %> method="POST">
        <div class="form-group">
            <input type="text" class="form-control" name="title" placeholder="Title" value=<%= entry.title %>>
        </div>
        <div class="form-group">
            <input type="text" name="author" class="form-control" placeholder="Author" value=<%= entry.author %>>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="post_data" cols="100" rows="10"
            placeholder="Add a Description"><%= entry.post_data %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Edit Post</button>
        </form>
    </div>
    </div>
    <% } else { %>
        <div class="row">
        <div class="col-md-8 blog-main">
            <h1>Are you sure you want to delete this post?</h1>
            <form action=<%= "/deletePost/" + entry.id %> method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="title" disabled="disabled" placeholder="Title" value=<%= entry.title %>>
            </div>
            <div class="form-group">
                <input type="text" name="author" disabled="disabled" class="form-control" placeholder="Author" value=<%= entry.author %>>
            </div>
            <div class="form-group">
                <textarea class="form-control" disabled="disabled" name="post_data" cols="100" rows="10"
                placeholder="Add a Description"><%= entry.post_data %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Delete</button>
            </form>
        </div>
        </div>
    <% } %>
</main>
<%- include ("./partials/_footer") %>